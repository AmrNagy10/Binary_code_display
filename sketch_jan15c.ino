  {1, 1, 1, 0, 1},
  {1, 1, 1, 1, 0},
  {1, 1, 1, 1, 1}
};

void setup()
{
  for (int i = 0; i <= 4; i++) {
    pinMode(led[i], OUTPUT);
  }
}

void loop()
{
  for (int i = 0; i < 32; i++) {
    digitalWrite(led[i % 5], val[i][i % 5]);
    delay(1000);
  }
  delay(2000);
  for (int i = 31; i >= 0; i--) {
    digitalWrite(led[i % 5], val[i][i % 5]);
    delay(1000);
  }
}
